	global ::error_value line_no
	puts $::opfile {<p>}
	::stk1 push {</p>}
}
proc भाग {{ रूप ""} { नाम ""} \(} {
	global ::error_value line_no
	if {${रूप} != ""} {
		if {${नाम} == ""} {
			set errfile [open $error_file_name w]
		      	puts $errfile "$line_no->नामम न जानामि"
	        	close $errfile
			set ::error_value 1
			::stk1 destroy
			return;
		} else {
			puts $opfile "<div id = \"${नाम}\">"
		}
	} else {
		puts $opfile {<div>}
	}
	puts $::opfile {<p>}
	::stk1 push {</p>}
}

