#!/usr/bin/tclsh

package require struct
set line_no 0
regsub {\\program_files\\(.*)$} $::argv0 {\program_files\output.html} output_file_name	
set ::opfile [open $output_file_name  w]

# Main program
proc main {file_name} {
	global ipfile output_file_name ::error_value line_no
	::struct::stack ::stk1	
	set line_no 0
	regsub {\\program_files\\(.*)$} $::argv0 {\program_files\errorfile} error_file_name	
	set ::error_value 0
	set ::ipfile [open $file_name r]
	puts $::opfile {<!DOCTYPE html>}
	puts $::opfile {<html>}
	while {[gets $::ipfile line] >= 0} {
		if {$::error_value == 1} {
			return 
		} elseif {$line == "\)"} {
			if {[::stk1 size] == 0} {
				set errfile [open $error_file_name w]
				incr line_no
		        	puts $errfile "$line_no->extra \")\""
		        	close $errfile
				set ::error_value 1
				::stk1 destroy
				return
			}
			puts $::opfile [::stk1 pop]
		} elseif { [catch {eval $line} error1] } {
			::stk1 destroy
			set errfile [open $error_file_name w]
		        puts $errfile "$line_no->$error1"
		        close $errfile
			set ::error_value 1
		        return 
		 }
		 incr line_no
	}
	puts $::opfile </html>
	if {$::error_value == 1} {
		return 
	}
	if {[::stk1 size] > 0} {
		set brace_no [::stk1 size]
		set errfile [open $error_file_name w]
	      	puts $errfile "$line_no->Missing \"(\""
        	close $errfile
		set ::error_value 1
		::stk1 destroy
		return
	}
	::stk1 destroy

	close $ipfile
	close $::opfile
}
# Proc title
proc शीर्ष {विषय} {
	puts $::opfile {<title>}
	puts $::opfile "${विषय}"
	puts $::opfile {</title>}
}

proc मुख्य { \( } {
	global ::error_value line_no
	puts $::opfile {<head>}
	::stk1 push {</head>}
}

